{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "outDir": "./dist",
    "rootDir": ".",
    "noEmit": false,
    "types": ["node"]
  },
  "include": [
    "types/**/*",
    "constants/**/*",
    "utils/**/*",
    "index.ts"
  ],
  "exclude": ["node_modules", "dist"]
} 